<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00ff00"
    android:gravity="center">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#000"
        android:weightSum="1">
        <ImageView
            android:id="@+id/img_car_showroom"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.9"
            android:layout_marginRight="@dimen/showroomitem_margin"
            android:scaleType="fitXY"
            android:src="@drawable/car_placeholder" />
        <Button
            android:id="@+id/btn_cartitle_showroom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/showroomitem_margin"
            android:textSize="@dimen/booking_item_button_textsize"
            android:textColor="#FFF"
            android:text="Click Me" />
    </LinearLayout>
</LinearLayout>