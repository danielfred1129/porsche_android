<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="100"
    android:background="#000"
    android:gravity="center"
    tools:context="com.unlimitec.porschetower.Fragments.DiningMenuFragment">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="90"
        android:layout_height="match_parent"
        android:background="#f00">
        <RelativeLayout
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#000">
            <ImageButton
                android:id="@+id/btn_phone_dining_menu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:background="@drawable/phone"/>
            <TextView
                android:id="@+id/txt_dining_menu_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="@dimen/description_textsize"
                android:maxLines="7"
                android:scrollbars="vertical"
                android:layout_marginTop="@dimen/dining_margin"
                android:layout_marginLeft="@dimen/dining_margin"
                android:layout_marginBottom="@dimen/dining_margin"
                android:layout_marginRight="@dimen/dining_margin"/>
            <Button
                android:id="@+id/btn_makeAnOrder_menu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:textAllCaps="false"
                android:text="@string/txt_make_an_order"
                android:textSize="@dimen/button_text_size_dining"
                android:background="@drawable/button"/>
        </RelativeLayout>

    </LinearLayout>

</LinearLayout>
